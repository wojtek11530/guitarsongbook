<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorScreenBackground</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>n
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:closeIcon">@drawable/ic_close_white_32dp</item>
    </style>

    <style name="TitleOfDisplayedSong" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="ArtistOfDisplayedSong" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="LyricOfDisplayedSong" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="SearchSuggestion" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="SongCounts" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ListItemTitle"  parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="ListItemSubtitle"  parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppBarTitle"  parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/pt_sans</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CategoryTitle"  parent="android:Widget.TextView">
        <item name="android:textSize">28sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorTextThird</item>
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">2.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:shadowRadius">6.0</item>
    </style>

    <style name="TileTitle"  parent="TextAppearance.AppCompat.Small">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/colorTextThird</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="ChordOfDisplayedSong" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@android:color/darker_gray</item>
        <item name="android:progressTint">@color/bottomNavigationColor</item>
        <item name="android:colorControlActivated">@color/bottomNavigationColor</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <style name="CustomPreferenceCategoryText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
</resources>
